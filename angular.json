{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "uniovi-avib-morphingprojections-portal": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular-devkit/build-angular:browser",
                    "options": {
                        "outputPath": "dist/uniovi-avib-morphingprojections-portal",
                        "index": "src/index.html",
                        "main": "src/main.ts",
                        "polyfills": [
                            "zone.js"
                        ],
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets"
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": [],
                        "allowedCommonJsDependencies": [
                            "file-saver",
                            "regl",
                            "js-sha256"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "2mb",
                                    "maximumError": "5mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "8kb",
                                    "maximumError": "12kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "avib": {
                            "budgets": [
                                {
                                "type": "initial",
                                "maximumWarning": "5mb",
                                "maximumError": "7mb"
                                },
                                {
                                "type": "anyComponentStyle",
                                "maximumWarning": "15kb",
                                "maximumError": "20kb"
                                }
                            ],
                            "outputHashing": "all",              
                            "fileReplacements": [
                                {
                                "replace": "src/environments/environment.ts",
                                "with": "src/environments/environment.avib.ts"
                                }
                            ]
                        },                         
                        "development": {
                            "buildOptimizer": false,
                            "optimization": false,
                            "vendorChunk": true,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular-devkit/build-angular:dev-server",
                    "configurations": {
                        "production": {
                            "buildTarget": "uniovi-avib-morphingprojections-portal:build:production"
                        },
                        "minikube": {
                            "buildTarget": "uniovi-avib-morphingprojections-frontend:build:minikube"
                        }, 
                        "avib-local": {
                            "buildTarget": "uniovi-avib-morphingprojections-frontend:build:avib-local"
                        },                             
                        "development": {
                            "buildTarget": "uniovi-avib-morphingprojections-portal:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular-devkit/build-angular:extract-i18n",
                    "options": {
                        "buildTarget": "uniovi-avib-morphingprojections-portal:build"
                    }
                },
                "test": {
                    "builder": "@angular-devkit/build-angular:karma",
                    "options": {
                        "polyfills": [
                            "zone.js",
                            "zone.js/testing"
                        ],
                        "tsConfig": "tsconfig.spec.json",
                        "karmaConfig": "karma.conf.js",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/assets"
                        ],
                        "styles": [
                            "src/styles.scss"
                        ],
                        "scripts": []
                    }
                }
            }
        }
    },
    "cli": {
      "analytics": false
    }
}